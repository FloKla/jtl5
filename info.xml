<?xml version="1.0" encoding="utf-8" ?>
<jtlshopplugin>
    <Name>mollie</Name>
    <Description>mollie Payment Plugin</Description>
    <Author>WebStollen GmbH</Author>
    <URL>https://www.webstollen.de</URL>
    <XMLVersion>102</XMLVersion>
    <ShopVersion>5.0.0-rc.2</ShopVersion>
    <PluginID>ws5_mollie</PluginID>
    <CreateDate>2020-07-08</CreateDate>
    <Version>1.0.1</Version>
    <Install>
        <Adminmenu>
            <Customlink sort="1">
                <Name>Dashboard</Name>
                <Filename>dashboard.php</Filename>
            </Customlink>
            <Settingslink sort="900">
                <Name>Einstellung</Name>
                <Setting type="text" initialValue="" sort="10" conf="Y">
                    <Name>API Key (live)</Name>
                    <Description>Füge hier deinen mollie API Key ein</Description>
                    <ValueName>apiKey</ValueName>
                </Setting>
                <Setting type="text" initialValue="" sort="10" conf="Y">
                    <Name>API Key (test)</Name>
                    <Description>Füge hier deinen mollie API Key ein</Description>
                    <ValueName>test_apiKey</ValueName>
                </Setting>
            </Settingslink>
        </Adminmenu>
        <PaymentMethod>
            <Method>
                <Name>mollie</Name>
                <PictureURL>images/logo/Mollie_logo_dark.png</PictureURL>
                <Sort>1</Sort>
                <SendMail>1</SendMail>
                <Provider>mollie</Provider>
                <TSCode>OTHER</TSCode>
                <PreOrder>0</PreOrder>
                <Soap>0</Soap>
                <Curl>1</Curl>
                <Sockets>0</Sockets>
                <ClassFile>Universal.php</ClassFile>
                <ClassName>Universal</ClassName>
                <TemplateFile>template/index.tpl</TemplateFile>
                <MethodLanguage iso="GER">
                    <Name>mollie</Name>
                    <ChargeName>mollie</ChargeName>
                    <InfoText>Wähle eine aus vielen Zahlungsmöglichkeiten.</InfoText>
                </MethodLanguage>
            </Method>
            <Method>
                <Name>Kreditkarte</Name>
                <PictureURL>images/Payment_methods/creditcard@2x.png</PictureURL>
                <Sort>1</Sort>
                <SendMail>1</SendMail>
                <Provider>mollie</Provider>
                <TSCode>CREDIT_CARD</TSCode>
                <PreOrder>0</PreOrder>
                <Soap>0</Soap>
                <Curl>1</Curl>
                <Sockets>0</Sockets>
                <ClassFile>CreditCard.php</ClassFile>
                <ClassName>CreditCard</ClassName>
                <TemplateFile>template/index.tpl</TemplateFile>
                <MethodLanguage iso="GER">
                    <Name>Kreditkarte</Name>
                    <ChargeName>mollie</ChargeName>
                    <InfoText>Bezahlen Sie bequem mit Kreditkarte.</InfoText>
                </MethodLanguage>
                <Setting type="text" initialValue="" sort="1" conf="Y">
                    <Name>Profil ID</Name>
                    <Description>Wenn du deine ProfilID eingibst, aktivierst du dadurch mollie Components</Description>
                    <ValueName>profile_id</ValueName>
                </Setting>
            </Method>
            <Method>
                <Name>Apple Pay</Name>
                <PictureURL>images/Payment_methods/applepay@2x.png</PictureURL>
                <Sort>1</Sort>
                <SendMail>1</SendMail>
                <Provider>mollie</Provider>
                <TSCode>OTHER</TSCode>
                <PreOrder>0</PreOrder>
                <Soap>0</Soap>
                <Curl>1</Curl>
                <Sockets>0</Sockets>
                <ClassFile>ApplePay.php</ClassFile>
                <ClassName>ApplePay</ClassName>
                <TemplateFile>template/index.tpl</TemplateFile>
                <MethodLanguage iso="GER">
                    <Name>Apple Pay</Name>
                    <ChargeName>mollie</ChargeName>
                    <InfoText>Bezahlen Sie bequem mit Apple Pay.</InfoText>
                </MethodLanguage>
            </Method>
            <Method>
                <Name>PayPal</Name>
                <PictureURL>images/Payment_methods/paypal@2x.png</PictureURL>
                <Sort>1</Sort>
                <SendMail>1</SendMail>
                <Provider>mollie</Provider>
                <TSCode>PAYPAL</TSCode>
                <PreOrder>0</PreOrder>
                <Soap>0</Soap>
                <Curl>1</Curl>
                <Sockets>0</Sockets>
                <ClassFile>PayPal.php</ClassFile>
                <ClassName>PayPal</ClassName>
                <TemplateFile>template/index.tpl</TemplateFile>
                <MethodLanguage iso="GER">
                    <Name>PayPal</Name>
                    <ChargeName>mollie</ChargeName>
                    <InfoText>Bezahlen Sie bequem mit PayPal.</InfoText>
                </MethodLanguage>
            </Method>
        </PaymentMethod>
    </Install>
</jtlshopplugin>