{
  "type": "project",
  "name": "webstollen/ws5_plugin",
  "description": "JTL-Shop 5 Plugin Container",
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "require": {
    "php": ">=7.2.0",
    "mollie/mollie-api-php": "^2.18.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^8.5",
    "phpmetrics/phpmetrics": "^2.7",
    "squizlabs/php_codesniffer": "3.*",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "authors": [
    {
      "email": "proske@wrebstollen.de",
      "name": "Christian Proske | WebStollen",
      "homepage": "https://www.webstollen.de",
      "role": "CTO"
    }
  ],
  "autoload": {
    "psr-4": {
      "ws5_mollie\\": "lib/"
    }
  },
  "scripts": {
    "analyze": "phpmetrics --report-html=report ./",
    "test": "phpunit",
    "sniff": "phpcs --standard=PSR12 --ignore=vendor/ ./lib",
    "csfix": "php-cs-fixer fix"
  }
}